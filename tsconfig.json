{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["src/**/*.ts", "./src/types.d.ts"]
}
